#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    chosen {
        zmk,matrix_transform = &default_transform;

        // zmk,matrix_transform = &five_column_transform;
    };
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "QWERTY";
            bindings = <
&kp TAB           &kp Q  &kp W  &kp E         &kp R  &kp T         &kp Y      &kp U  &kp I       &kp O    &kp P     &kp BSPC
&kp LC(LA(LGUI))  &kp A  &kp S  &kp D         &kp F  &kp G         &kp H      &kp J  &kp K       &kp L    &kp SEMI  &kp SQT
&kp LEFT_CONTROL  &kp Z  &kp X  &kp C         &kp V  &kp B         &kp N      &kp M  &kp COMMA   &kp DOT  &kp FSLH  &kp RETURN
                                &kp LEFT_GUI  &mo 1  &kp LSHIFT    &kp SPACE  &mo 2  &kp ESCAPE
            >;
        };

        lower_layer {
            display-name = "NUMBER";
            bindings = <
&kp GRAVE  &kp N1  &kp N2  &kp N3     &kp N4     &bt BT_CLR      &trans  &kp F1  &kp F2   &kp F3   &kp F4   &trans
&trans     &kp N5  &kp N6  &kp N7     &kp N8     &bt BT_SEL 0    &trans  &kp F5  &kp F6   &kp F7   &kp F8   &kp PAGE_UP
&trans     &kp N9  &kp N0  &kp MINUS  &kp EQUAL  &bt BT_SEL 1    &trans  &kp F9  &kp F10  &kp F11  &kp F12  &kp PAGE_DOWN
                           &trans     &trans     &trans          &trans  &trans  &trans
            >;
        };

        raise_layer {
            display-name = "SYMBOL";
            bindings = <
&kp LS(GRAVE)  &kp EXCL    &kp AT      &kp HASH       &kp DLLR       &trans    &trans    &trans    &trans  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp BACKSLASH
&trans         &kp LS(N5)  &kp LS(N6)  &kp LS(N7)     &kp LS(N8)     &none     &kp LEFT  &kp DOWN  &kp UP  &kp RIGHT         &trans             &trans
&trans         &kp LS(N9)  &kp LS(N0)  &kp LS(MINUS)  &kp LS(EQUAL)  &none     &trans    &trans    &trans  &trans            &trans             &trans
                                       &trans         &trans         &trans    &trans    &trans    &trans
            >;
        };
    };
};
